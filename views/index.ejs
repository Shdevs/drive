    <script>
        // Dark Mode Functionality
        const themeToggle = document.getElementById('themeToggle');
        const html = document.documentElement;

        // Check for saved theme preference or default to light mode
        const currentTheme = localStorage.getItem('theme') || 'light';
        
        // Apply the saved theme
        if (currentTheme === 'dark') {
            html.setAttribute('data-theme', 'dark');
        }

        // Toggle theme function
        themeToggle.addEventListener('click', () => {
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            
            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
        });

        // Smooth scroll for better UX
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Contact form submission
        document.getElementById('contactForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const messageDiv = document.getElementById('contactMessage');
            const submitBtn = this.querySelector('button[type="submit"]');
            
            submitBtn.disabled = true;
            submitBtn.textContent = 'Göndərilir...';
            messageDiv.style.display = 'none';

            try {
                const response = await fetch('/contact', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();
                
                if (result.success) {
                    messageDiv.className = 'mt-3 alert alert-success';
                    messageDiv.textContent = 'Mesajınız uğurla göndərildi!';
                    messageDiv.style.display = 'block';
                    this.reset();
                } else {
                    messageDiv.className = 'mt-3 alert alert-danger';
                    messageDiv.textContent = result.message || 'Xəta baş verdi. Zəhmət olmasa yenidən cəhd edin.';
                    messageDiv.style.display = 'block';
                }
            } catch (error) {
                messageDiv.className = 'mt-3 alert alert-danger';
                messageDiv.textContent = 'Xəta baş verdi. Zəhmət olmasa yenidən cəhd edin.';
                messageDiv.style.display = 'block';
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Göndər';
            }
        });
    </script>
